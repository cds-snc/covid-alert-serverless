{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:all",
        "plugin:security/recommended",
        "prettier"
    ],
    "plugins": [ 
      "security"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
      "strict": 0,
      "one-var": ["error", { "var": "always", "let": "never", "const": "never" }],
      "max-statements": ["error", 20 ],
      "no-console": 0,
      "max-lines": ["error", 400],
      "max-lines-per-function": ["error", 80]
    },
    "overrides": [{
      "files": "*.test.js",
      "excludedFiles": "node_modules/**/*.test.js"
    }]

}
